<Window x:Class="Expensesmanager.View.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" 
        Height="450" 
        Width="400" 
        WindowStartupLocation="CenterScreen"
        Background="#181C28"
        WindowStyle="None"
        AllowsTransparency="True">
    <Grid>
        <Grid Background="#181C28" Height="30" VerticalAlignment="Top">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0">
                <Button x:Name="MinimizeButton" 
                        Width="12" 
                        Height="12" 
                        Background="#FFBD2E" 
                        BorderThickness="0" 
                        Margin="5,0,0,0" 
                        Cursor="Hand" 
                        Click="MinimizeButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="6" />
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button x:Name="MaximizeButton" 
                        Width="12" 
                        Height="12" 
                        Background="#28C940" 
                        BorderThickness="0" 
                        Margin="5,0,0,0" 
                        Cursor="Hand" 
                        Click="MaximizeButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="6" />
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button x:Name="CloseButton" 
                        Width="12" 
                        Height="12" 
                        Background="#FF5F56" 
                        BorderThickness="0" 
                        Margin="5,0,0,0" 
                        Cursor="Hand" 
                        Click="CloseButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="6" />
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Grid>

        <TextBlock HorizontalAlignment="Center" Margin="0,40,0,0" Cursor="Hand">
            <Run Text="Expenses" Foreground="#8D6EEF" FontSize="28" FontWeight="Bold" />
            <Run Text="Manager" Foreground="#5529EE" FontSize="28" FontWeight="Bold" />
        </TextBlock>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="E-Mail:" 
                       Foreground="White" 
                       FontSize="14" 
                       Margin="0,20,0,5" />
            <TextBox x:Name="EmailTextBox" 
                     Text="MaxMustermann@admin.ch" 
                     Foreground="#E0E0E0" 
                     Background="#212121" 
                     BorderBrush="#424242" 
                     Height="35" 
                     Padding="5" 
                     BorderThickness="1" 
                     FontSize="14" />

            <TextBlock Text="Passwort:" 
                       Foreground="White" 
                       FontSize="14" 
                       Margin="0,20,0,5" />
            <PasswordBox x:Name="PasswordBox" 
                         Background="#212121" 
                         BorderBrush="#424242" 
                         Foreground="#E0E0E0" 
                         Height="35" 
                         Padding="5" 
                         BorderThickness="1" 
                         FontSize="14" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button Content="Reset" 
                        Width="100" 
                        Height="35" 
                        Background="#8D6EEF" 
                        Foreground="White" 
                        BorderThickness="0" 
                        Margin="10,0,10,0"
                        Cursor="Hand" 
                        Click="ResetButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                    CornerRadius="10">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center" />
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button Content="Submit" 
                        Width="100" 
                        Height="35" 
                        Background="#5529EE" 
                        Foreground="White" 
                        BorderThickness="0" 
                        Cursor="Hand" 
                        Margin="10,0,10,0"
                        Click="LoginButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                    CornerRadius="10">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                          VerticalAlignment="Center" />
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>

            <TextBlock x:Name="ErrorTextBlock" 
                       Text="Login fehlgeschlagen" 
                       Foreground="#FF5C5C" 
                       FontSize="12" 
                       HorizontalAlignment="Center" 
                       Visibility="Collapsed" 
                       Margin="0,10,0,0" />

        </StackPanel>
        <Button Content="Kein Account?" 
                Background="Transparent" 
                Foreground="White" 
                BorderBrush="#424242" 
                BorderThickness="1" 
                Height="35" 
                Width="150" 
                Margin="240,389,10,10" 
                Cursor="Hand" />
    </Grid>
</Window>