<Window x:Class="Expensesmanager.View.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" 
        Height="450" 
        Width="400" 
        WindowStartupLocation="CenterScreen"
        Background="#181C28"
        WindowStyle="None">
    <Grid>
        <!-- Title -->
        <TextBlock HorizontalAlignment="Center" Margin="0,40,0,0" Cursor="Hand">
            <Run Text="Expenses" Foreground="#8D6EEF" FontSize="28" FontWeight="Bold" />
            <Run Text="Manager" Foreground="#5529EE" FontSize="28" FontWeight="Bold" />
        </TextBlock>

        <!-- Email -->
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="E-Mail:" 
                       Foreground="White" 
                       FontSize="14" 
                       Margin="0,20,0,5" />
            <TextBox x:Name="UsernameTextBox" 
                     Text="MaxMustermann@admin.ch" 
                     Foreground="#E0E0E0" 
                     Background="#212121" 
                     BorderBrush="#424242" 
                     Height="35" 
                     Padding="5" 
                     BorderThickness="1" 
                     FontSize="14" />

            <!-- Password -->
            <TextBlock Text="Passwort:" 
                       Foreground="White" 
                       FontSize="14" 
                       Margin="0,20,0,5" />
            <PasswordBox x:Name="PasswordBox" 
                         Background="#212121" 
                         BorderBrush="#424242" 
                         Foreground="#E0E0E0" 
                         Height="35" 
                         Padding="5" 
                         BorderThickness="1" 
                         FontSize="14" />

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button Content="Reset" 
                        Width="100" 
                        Height="35" 
                        Background="#8D6EEF" 
                        Foreground="White" 
                        BorderThickness="0" 
                        Margin="10,0,10,0"
                        Cursor="Hand" >
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                    CornerRadius="10">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center" />
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button Content="Submit" 
                        Width="100" 
                        Height="35" 
                        Background="#5529EE" 
                        Foreground="White" 
                        BorderThickness="0" 
                        Cursor="Hand" 
                        Margin="10,0,10,0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                    CornerRadius="10">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                          VerticalAlignment="Center" />
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

            </StackPanel>

            <!-- Error Message -->
            <TextBlock x:Name="ErrorTextBlock" 
                       Text="Login fehlgeschlagen" 
                       Foreground="#FF5C5C" 
                       FontSize="12" 
                       HorizontalAlignment="Center" 
                       Visibility="Collapsed" 
                       Margin="0,10,0,0" />

            <!-- Sign Up Link -->
        </StackPanel>
        <Button Content="Kein Account?" 
        Background="Transparent" 
        Foreground="White" 
        BorderBrush="#424242" 
        BorderThickness="1" 
        Height="35" 
        Width="150" 
        Margin="240,389,10,10" 
        Cursor="Hand" 
        />
    </Grid>
</Window>
