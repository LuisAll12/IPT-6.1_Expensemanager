<Window x:Class="Expensesmanager.View.RegisterView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Register" 
        Height="640" 
        Width="470" 
        WindowStartupLocation="CenterScreen"
        Background="#181C28"
        WindowStyle="None"
        AllowsTransparency="True">
    <Grid MouseDown="Window_MouseDown">
        <Grid Background="#181C28" Height="30" VerticalAlignment="Top">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0">
                <Button x:Name="MinimizeButton" 
                        Width="12" 
                        Height="12" 
                        Background="#28C940" 
                        BorderThickness="0" 
                        Margin="5,0,0,0" 
                        Cursor="Hand" 
                        Click="MinimizeButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="6" />
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!--<Button x:Name="MaximizeButton" 
                        Width="12" 
                        Height="12" 
                        Background="#FFBD2E" 
                        BorderThickness="0" 
                        Margin="5,0,0,0" 
                        Cursor="Hand" 
                        Click="MaximizeButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="6" />
                        </ControlTemplate>
                    </Button.Template>
                </Button>-->

                <Button x:Name="CloseButton" 
                        Width="12" 
                        Height="12" 
                        Background="#FF5F56" 
                        BorderThickness="0" 
                        Margin="5,0,0,0" 
                        Cursor="Hand" 
                        Click="CloseButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="6" />
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Grid>

        <TextBlock HorizontalAlignment="Center" Margin="0,40,0,0" Cursor="Hand">
            <Run Text="Expenses" Foreground="#8D6EEF" FontSize="28" FontWeight="Bold" />
            <Run Text="Manager" Foreground="#5529EE" FontSize="28" FontWeight="Bold" />
        </TextBlock>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <!-- Email -->
            <TextBlock>
                <Run Text="Email:" Foreground="White" FontSize="14"/>
                <Run Text="*" Foreground="#d04763" />
            </TextBlock>
                <TextBox x:Name="EmailTextBox" 
                     Tag="Max.Mustermann@user.com" 
                     Style="{StaticResource RoundedInputBoxTheme}"/>
            <!-- Password -->
            <TextBlock Margin="0 10 0 0">
                <Run Text="Passwort:" Foreground="White" FontSize="14"/>
                <Run Text="*" Foreground="#d04763" />
            </TextBlock>
            <PasswordBox x:Name="PasswordBox" 
                         Style="{StaticResource RoundedPasswordBoxTheme}"/>
            <!-- FirstName -->
            <TextBlock Margin="0 10 0 0">
                <Run Text="Vorname:" Foreground="White" FontSize="14"/>
                <Run Text="*" Foreground="#d04763" />
            </TextBlock>
            <TextBox x:Name="FirstNameTextBox" 
                     Tag="Max"  
                     Style="{StaticResource RoundedInputBoxTheme}"/>
            <!-- LastName -->
            <TextBlock Margin="0 10 0 0">
                <Run Text="Nachname:" Foreground="White" FontSize="14"/>
                <Run Text="*" Foreground="#d04763" />
            </TextBlock>
            <TextBox x:Name="LastNameTextBox" 
                     Tag="Mustermann"
                     Style="{StaticResource RoundedInputBoxTheme}"/>
            <!-- MonthlyIncome -->
            <TextBlock Margin="0 10 0 0">
                <Run Text="Monatliches Einkommen::" Foreground="White" FontSize="14"/>
                <Run Text="*" Foreground="#d04763" />
            </TextBlock>
            <TextBox x:Name="MonthlyIncomeTextBox" 
                     Tag="6500.00"
                     Style="{StaticResource RoundedInputBoxTheme}"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button Content="Reset" 
                        Width="140" 
                        Height="35" 
                        Background="#8D6EEF" 
                        Foreground="White" 
                        BorderThickness="0" 
                        Margin="10,0,10,0"
                        Cursor="Hand" 
                        Click="ResetButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                    CornerRadius="10">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center" />
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button Content="Register" 
                        Width="140" 
                        Height="35" 
                        Background="#5529EE" 
                        Foreground="White" 
                        BorderThickness="0" 
                        Cursor="Hand" 
                        Margin="10,0,10,0"
                        Click="RegisterButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                    CornerRadius="10">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                          VerticalAlignment="Center" />
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>

            <TextBlock x:Name="ErrorTextBlock" 
                       Text="Login fehlgeschlagen" 
                       Foreground="#FF5C5C" 
                       FontSize="12" 
                       HorizontalAlignment="Center" 
                       Visibility="Collapsed" 
                       Margin="0,10,0,0" />

        </StackPanel>
        <Button Content="Account vorhanden?" 
                Background="#5529EE" 
                Foreground="White" 
                BorderBrush="#424242" 
                BorderThickness="1" 
                Height="35" 
                Width="150" 
                Margin="310,595,10,10" 
                Cursor="Hand"
                Click="AccountAvailable_Click">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" 
                            BorderBrush="{TemplateBinding BorderBrush}" 
                            CornerRadius="10">
                        <ContentPresenter HorizontalAlignment="Center" 
                                      VerticalAlignment="Center" />
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </Grid>
</Window>