<UserControl x:Class="Expensesmanager.MVMM.View.MyTransactionsView"
             xmlns:local="clr-namespace:Expensesmanager.Core"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" d:DesignWidth="800" Height="500" Cursor="Hand">
    <UserControl.Resources>
        <local:AmountToColorConverter x:Key="AmountColorConverter" />
    </UserControl.Resources>
    <StackPanel>
    <TextBlock HorizontalAlignment="Center" Margin="0,10,0,0" Cursor="Hand">
            <Run Text="Meine" Foreground="#8D6EEF" FontSize="28" FontWeight="Bold" />
            <Run Text="Transaktionen" Foreground="#5529EE" FontSize="28" FontWeight="Bold" />
    </TextBlock>
        <DataGrid ItemsSource="{Binding Records}"
          AutoGenerateColumns="False"
          HeadersVisibility="Column"
          CanUserAddRows="False"
          CanUserDeleteRows="False"
          CanUserResizeRows="False"
          RowBackground="#161a25"
          AlternatingRowBackground="#1d2331"
          Background="Transparent"
          BorderBrush="Transparent"
          GridLinesVisibility="None"
          Foreground="#E0E0E0"
          FontSize="16"
          ColumnHeaderHeight="50"
          RowHeight="40"
          Padding="10"
          HorizontalScrollBarVisibility="Auto"
          VerticalScrollBarVisibility="Auto"
          Width="750"
          Height="366" 
          IsReadOnly="True">
            <DataGrid.Resources>
                <Style TargetType="{x:Type DataGridColumnHeader}">
                    <Setter Property="Background" Value="#2A2A40"/>
                    <Setter Property="Foreground" Value="#A68EFF"/>
                    <Setter Property="FontSize" Value="22"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    <Setter Property="Padding" Value="10"/>
                    <Setter Property="BorderBrush" Value="#333"/>
                    <Setter Property="BorderThickness" Value="0,0,0,2"/>
                </Style>

                <Style TargetType="{x:Type DataGridCell}">
                    <Setter Property="Foreground" Value="#E0E0E0"/>
                    <Setter Property="BorderBrush" Value="#1E1E2E"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    <Setter Property="Padding" Value="10"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <Style.Triggers>

                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#3A3A5A"/>
                            <Setter Property="Foreground" Value="#FFFFFF"/>
                        </Trigger>

                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="#A68EFF"/>
                            <Setter Property="Foreground" Value="#1E1E2E"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>

                <Style TargetType="{x:Type DataGridRow}">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="BorderBrush" Value="Transparent"/>
                    <Style.Triggers>

                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#3A3A5A"/>
                        </Trigger>

                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="#A68EFF"/>
                            <Setter Property="Foreground" Value="#1E1E2E"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.Resources>

            <DataGrid.Columns>
                <DataGridTemplateColumn Header="Amount" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Amount, StringFormat={}{0} CHF}" 
                       Foreground="{Binding Amount, Converter={StaticResource AmountColorConverter}}" 
                       HorizontalAlignment="Center"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>


                <!-- Update the other two columns as well -->
                <DataGridTextColumn Header="Date" Binding="{Binding Date, StringFormat={}{0:dd.MM.yyyy}}" Width="*"/>
                <DataGridTextColumn Header="Category" Binding="{Binding Category}" Width="*"/>

            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Editieren" 
                Width="100" 
                Height="35" 
                Background="#8D6EEF" 
                Foreground="White" 
                BorderThickness="0"
                Cursor="Hand" 
                Margin="0 10 0 0" Click="EditButton_Click">
            <!-- Click-Event entfernt -->
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Background="{TemplateBinding Background}" 
                    BorderBrush="{TemplateBinding BorderBrush}" 
                    CornerRadius="10">
                        <ContentPresenter HorizontalAlignment="Center" 
                                  VerticalAlignment="Center" />
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </StackPanel>
</UserControl>
