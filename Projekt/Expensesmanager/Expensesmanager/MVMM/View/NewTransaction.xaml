<UserControl x:Class="Expensesmanager.MVMM.View.NewTransaction"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Expensesmanager.MVMM.View"
        mc:Ignorable="d" d:DesignWidth="800" Height="500"
        >
    <Grid>
        <TextBlock HorizontalAlignment="Center" Margin="0,40,0,0" Cursor="Hand">
            <Run Text="Neue" Foreground="#8D6EEF" FontSize="28" FontWeight="Bold" />
            <Run Text="Transaktion" Foreground="#5529EE" FontSize="28" FontWeight="Bold" />
        </TextBlock>


        <!-- Formular -->
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">

            <!-- Betrag -->
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Betrag:" Foreground="White" FontSize="14" Width="80"/>
                <TextBox x:Name="txtAmount" 
                         Style="{StaticResource RoundedInputBoxTheme}"
                         Width="200"
                         Tag="220.00"/>
            </StackPanel>

            <!-- Datum -->
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Datum:" Foreground="White" FontSize="14" Width="80"/>
                <TextBox x:Name="txtdateTransaction" 
                            Style="{DynamicResource RoundedInputBoxTheme}"
                            Width="200"
                            Background="#101721"
                            Foreground="White"
                            Tag="dd.mm.yyyy"/>
            </StackPanel>

            <!-- Beschreibung -->
            <StackPanel>
                <TextBlock Text="Beschreibung:" Foreground="White"/>
                <TextBox x:Name="txtDescription" 
                         MaxLength="255" 
                         Height="60" 
                         TextWrapping="Wrap" 
                         AcceptsReturn="True"
                         Background="#101721" 
                         Foreground="White" 
                         TextChanged="txtDescription_TextChanged" 
                         Style="{DynamicResource RoundedInputBoxTheme}"/>
                <TextBlock x:Name="charCount" Foreground="Gray" FontSize="10" HorizontalAlignment="Right"
                           Text="0/255"/>
            </StackPanel>

            <!-- Kategorie -->
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Kategorie:" 
                           Foreground="White" 
                           FontSize="14" Width="80"/>
                <ComboBox x:Name="cmbCategory" Width="200" Background="#101721" Foreground="White">
                    <ComboBoxItem Content="Kategorie1" Background="#101721" Foreground="White"/>
                    <ComboBoxItem Content="Kategorie2"/>
                    <ComboBoxItem Content="Kategorie3"/>
                </ComboBox>
            </StackPanel>

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button Content="Zurücksetzen" 
                        Width="140" 
                        Height="35" 
                        Background="#8D6EEF" 
                        Foreground="White" 
                        BorderThickness="0" 
                        Margin="10,0,10,0"
                        Cursor="Hand" 
                        Click="ResetButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                    CornerRadius="10">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center" />
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button Content="Submit" 
                        Width="140" 
                        Height="35" 
                        Background="#5529EE" 
                        Foreground="White" 
                        BorderThickness="0" 
                        Cursor="Hand" 
                        Margin="10,0,10,0"
                        Click="SubmitButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                    CornerRadius="10">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center" />
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>

            <!-- Fehlermeldung -->
            <TextBlock x:Name="lblError" 
                       Foreground="Red" 
                       HorizontalAlignment="Center"
                       Visibility="Collapsed" 
                       Text="Nicht alle Felder ausgefüllt"/>
        </StackPanel>
    </Grid>
</UserControl>
