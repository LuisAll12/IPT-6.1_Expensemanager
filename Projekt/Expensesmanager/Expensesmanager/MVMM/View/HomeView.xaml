<UserControl x:Class="Expensesmanager.MVMM.View.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Expensesmanager.MVMM.View"
             mc:Ignorable="d" d:DesignWidth="800" Height="500">
    <StackPanel>
        <TextBlock Text="Statistiken"
                   Foreground="White"
                   FontSize="28"
                   HorizontalAlignment="Left"
                   Margin="0,0,0,10"/>
        <StackPanel Orientation="Horizontal"
                    Margin="0,0,0,5"
                    Height="65">

            <Border Width="210"
                    Height="60"
                    CornerRadius="15">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                        <GradientStop Color="#5529EE" Offset="0.0"/>
                        <GradientStop Color="#8D6EEF" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <Grid>
                    <TextBlock Text="Einkommen:"
                               Foreground="White"
                               FontSize="17"
                               HorizontalAlignment="Left"
                               Margin="9,0,0,38"/>

                    <TextBlock x:Name="IncomeTextBlock"
                               Text="21442136"
                               Foreground="White"
                               FontSize="24"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Margin="0,18,0,15"/>
                </Grid>
            </Border>
            <Border Width="210"
                    Height="60"
                    Margin="30,0,0,0"
                    CornerRadius="15">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                        <GradientStop Color="#5529EE" Offset="0.0"/>
                        <GradientStop Color="#8D6EEF" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <Grid>
                    <TextBlock Text="Ausgaben:"
                               Foreground="White"
                               FontSize="17"
                               HorizontalAlignment="Left"
                               Margin="9,0,0,38"/>

                    <TextBlock x:Name="ExpensesTextBlock"
                               Text="2144136"
                               Foreground="White"
                               FontSize="24"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Margin="0,18,0,15"/>
                </Grid>
            </Border>
            <Border Width="210"
                    Height="60"
                    Margin="30,0,0,0"
                    CornerRadius="15">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                        <GradientStop Color="#5529EE" Offset="0.0"/>
                        <GradientStop Color="#8D6EEF" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <Grid>
                    <TextBlock Text="Verbleibende Tage:"
                               Foreground="White"
                               FontSize="17"
                               HorizontalAlignment="Left"
                               Margin="9,0,0,38"/>

                    <TextBlock x:Name="RemainingDaysTextBlock"
                               Text="12"
                               Foreground="White"
                               FontSize="24"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Margin="0,18,0,15"/>
                </Grid>
            </Border>
        </StackPanel>
        <StackPanel>
            <StackPanel.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="Margin" Value="15,0,0,0"/>
                </Style>
            </StackPanel.Resources>
            <TextBlock Text="Personalisiertes Diagramm"
                       Foreground="White"
                       FontSize="28"
                       HorizontalAlignment="Left"
                       Margin="0,0,0,20"/>

            <StackPanel Orientation="Horizontal" Height="154">

                <Border Width="150"
                        Height="150"
                        Background="#844eff"
                        CornerRadius="10"
                        Margin="0"/>

                <Border Width="150"
                        Height="150"
                        Background="#4e99ff"
                        CornerRadius="10"/>

                <Border Width="150"
                        Height="150"
                        Background="#4eff91"
                        CornerRadius="10"/>

                <Border Width="150"
                        Height="150"
                        Background="#ecff4e"
                        CornerRadius="10"/>
            </StackPanel>
        </StackPanel>
    </StackPanel>
</UserControl>
